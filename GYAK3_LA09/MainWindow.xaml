<Window x:Class="GYAK3_LA09.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GYAK3_LA09"
        mc:Ignorable="d"
        Title="Memory Game" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem x:Name="miExit" Header="Exit" Click="miExit_Click" />
            <MenuItem x:Name="miMix" Header="Mix" Click="miMix_Click"/>
            <MenuItem x:Name="miGuess" Header="Guess" Click="miGuess_Click"/>
        </Menu>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.Resources>
                <Style TargetType="{x:Type Image}">
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="VerticalAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="5"/>
                </Style>
            </Grid.Resources>

            <Image x:Name="im10" Grid.Row="0" Grid.Column="0"/>
            <Image x:Name="im11" Grid.Row="0" Grid.Column="1"/>
            <Image x:Name="im12" Grid.Row="0" Grid.Column="2"/>
            <Image x:Name="im13" Grid.Row="0" Grid.Column="3"/>
            
            <Image x:Name="im20" Grid.Row="1" Grid.Column="0"/>
            <Image x:Name="im21" Grid.Row="1" Grid.Column="1"/>
            <Image x:Name="im22" Grid.Row="1" Grid.Column="2"/>
            <Image x:Name="im23" Grid.Row="1" Grid.Column="3"/>
            
        </Grid>
    </DockPanel>
</Window>
